<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <title>Perhitungan Luas Bangun Datar</title>
</head>
<body>
    <h1>Perhitungan Luas Bangun Datar</h1>

    <script>
        // Fungsi untuk menghitung luas persegi panjang
        // Parameter: panjang (angka), lebar (angka)
        function hitungLuasPersegiPanjang(panjang, lebar) {
            return panjang * lebar;
        }

        // Fungsi untuk menghitung luas bujur sangkar (persegi)
        // Parameter: sisi (angka)
        function hitungLuasBujurSangkar(sisi) {
            return sisi * sisi;
        }

        // Fungsi untuk menghitung luas segitiga
        // Parameter: alas (angka), tinggi (angka)
        function hitungLuasSegitiga(alas, tinggi) {
            return (alas * tinggi) / 2;
        }

        // Nilai bebas untuk parameter (bisa diubah sesuai kebutuhan)
        let panjang = 10;
        let lebar = 5;
        let sisi = 7;
        let alas = 6;
        let tinggi = 4;

        // Menampilkan hasil perhitungan ke dalam console
        console.log("Luas Persegi Panjang (panjang = " + panjang + ", lebar = " + lebar + "): " + hitungLuasPersegiPanjang(panjang, lebar));
        console.log("Luas Bujur Sangkar (sisi = " + sisi + "): " + hitungLuasBujurSangkar(sisi));
        console.log("Luas Segitiga (alas = " + alas + ", tinggi = " + tinggi + "): " + hitungLuasSegitiga(alas, tinggi));
    </script>
</body>
</html>
